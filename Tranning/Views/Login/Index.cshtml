@model Tranning.Models.LoginModel;
@{
	ViewData["Title"] = "Login Page";
	Layout = "~/Views/Shared/_MyLayout.cshtml";
}
@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-t-5 p-b-20">
				<form class="login100-form validate-form">
					<span class="login100-form-avatar">
						<img src="~/assets/img/Logo.png" alt="AVATAR">
					</span>
					<div class="wrap-input100 validate-input m-t-25 m-b-35" data-validate="Enter username">
						@* <input class="input100 has-val" type="text" name="username"> *@
						@Html.TextBoxFor(m => m.Username, new { @class="input100 has-val", @id="username"})
						<span class="focus-input100" data-placeholder="Username"></span>
					</div>
					<div class="wrap-input100 validate-input m-b-50" data-validate="Enter password">
						@* <input class="input100 has-val" type="password" name="pass"> *@
						@Html.PasswordFor(m => m.Password, new {@class="input100 has-val", @id="password"})
						<span class="focus-input100" data-placeholder="Password"></span>
					</div>
					@if (ViewData["MessageLogin"] != null)
					{
						<div class="mb-3">
							<p class="text-danger text-center">
								@ViewData["MessageLogin"]
							</p>
						</div>
					}
					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							Login
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
}