@model Tranning.Models.TopicDetail

@{
    ViewData["Title"] = "Update Topic";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row vh-100">
    <div class="col-sm-12 col-md-12">
        <div class="card">
            <div class="card-header">
                <h5> Update Topic</h5>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" asp-action="Update">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label asp-for="name">Name</label>
                                <input asp-for="name" class="form-control" />
                                <span class="text-danger" asp-validation-for="name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="course_id">Course</label>
                                <select asp-for="course_id" class="form-control" asp-items="@(new SelectList(ViewBag.Stores, "Value", "Text"))">
                                </select>
                                <span class="text-danger" asp-validation-for="course_id"></span>

                            </div>
                            
                            <div class="form-group">
                                <label asp-for="fileVideos">Video</label>
                                <input asp-for="fileVideos" class="form-control" type="file" />
                                <span class="text-danger" asp-validation-for="fileVideos"></span>
                                @* <small class="form-text text-muted">Enter a valid YouTube video ID.</small> *@
                            </div>
                            <div class="form-group">
                                <video width="550" height="400" controls>
                                    <source src="~/Uploads/videos/@Model.videos" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                            </div>

                            <div class="form-group">
                                <label asp-for="fileDocuments">Documents</label>
                                <input type="file" asp-for="fileDocuments" class="form-control" />
                                <span class="text-danger" asp-validation-for="fileDocuments"></span>
                            </div>
                            <div class="form-group">
                                <p>@Model.documents</p>
                            </div>
                            <div class="sm-12 col-md-6">
                                <button class="btn btn-primary btn-sm" type="submit">Save</button>
                                <a class="btn btn-info btn-sm" href="@Url.Action("Index","Topic")">Back to lists</a>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label asp-for="description">Description</label>
                                <textarea asp-for="description" class="form-control" rows="5"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="fileAttach_file">Attachment File</label>
                                <input type="file" asp-for="fileAttach_file" class="form-control" />
                                <span class="text-danger" asp-validation-for="fileAttach_file"></span>
                            </div>
                            <div class="form-group">
                                <img class="img-fluid" src="/Uploads/images/@Model.attach_file" />
                            </div>
                            <div class="form-group">
                                <label asp-for="status">Status</label>
                                <select class="form-control" asp-for="status">
                                    <option value="Active">Active</option>
                                    <option value="Deactive">Deactive</option>
                                </select>
                                <span asp-validation-for="status" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>